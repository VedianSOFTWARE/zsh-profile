#!/bin/zsh
alias refresh='source ~/.zshrc'
alias sail='[ -f sail ] && sh sail || sh $PROJECTS/Website/vendor/bin/sail'
alias sc='sail composer'
alias du='sail composer du'
alias artisan='sail artisan'
alias npm='sail npm'
alias run='clear && sail npm run dev'
alias start='website && sail up -d && clear && sail npm run dev'
alias up='website && sail up -d'
alias down='website && sail down'
alias origin='git push -u origin'
alias push='git_push_with_upstream'
alias commit='git add . && commitFunction'
alias optimize='optimizeClear'
alias website='clear && cd $PROJECTS/Website'
alias pagebuilder="clear && cd $PROJECTS/Pagebuilder"
alias pull='git pull'
alias status='git status'
alias add='git add .'
alias checkout='git checkout'
alias main='git checkout main'
alias dev='git checkout develop'
alias fresh='sail artisan migrate:fresh --seed'
alias delete_merged='git branch --merged | egrep -v "(^\*|main|develop)" | xargs git branch -d'